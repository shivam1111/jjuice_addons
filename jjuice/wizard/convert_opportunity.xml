<openerp>
	<data>
		<record id="crm_lead2opportunity_partner_lead_view" model="ir.ui.view">
            <field name="name">first.view.inheritancess.lead</field>
            <field name="model">crm.lead2opportunity.partner</field>
            <field name="inherit_id" ref="crm.view_crm_lead2opportunity_partner"/>
            <field name="arch" type="xml">
				<xpath expr="/form/group[@name='action']/field[@name='action']" position='before'>
					<field name='create_lead'/>
				</xpath>
				<xpath expr="/form/group[@name='action']/field[@name='action']" position="attributes">
					<attribute name="attrs">{'invisible':[('create_lead','=',True)]}</attribute>
				</xpath>
            </field>
        </record>
	</data>
</openerp>