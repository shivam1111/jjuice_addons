<openerp>
	<data>
		<record id = "res_config_django_panel_settings" model = "ir.ui.view">
			<field name="name">Django Panel Settings</field>
			<field name = "model">django.panel.settings</field>
			<field name="arch" type="xml">
                <form string="Django Panel Settings" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <group string = "AWS Settings">
                    	<group>
	                    	<field name = "aws_access_id" />
	                    	<field name = "aws_secret_key" />
	                     	   
                    	</group>
                    	<group>
	                    	<field name = "root_bucket"  /> 
	                    	<field name = "aws_base_url" />
<!-- 	                    	<field name = "website_banner_key" />
	                    	<field name = "website_policy_key" /> 
       	                   	<field name = "volume_key" /> -->
                    	</group>
                    </group>
                    <group string="Website Info" col="3">
                    	<group col="1">
                    		<div>
	                    		<label for="site_name" />
	                    		<field name = "site_name" nolabel="1" />	                    		
                    		</div>
                    		<div>
	                    		<label for="attribute_value_ids" />
	                    		<field name = "attribute_value_ids" nolabel="1" widget = "many2many_tags" options="{'no_create': True,'no_quick_create':True,'no_create_edit': True}"/>                    		
                    		</div>
                    	</group>
                    	<group col="1">
                    		<div>
	                    		<label for="attributes_available_ids" />
	                    		<field name = "attributes_available_ids" nolabel="1" widget = "many2many_tags" options="{'no_create': True,'no_quick_create':True,'no_create_edit': True}"/>                    		
                    		</div>                    		                    		
                    	</group>
                    	<group col="1">
                    		<div>
	                    		<label for="mailing_list_id" />
	                    		<field name = "mailing_list_id" nolabel="1" required = "1" />
                    		</div>
                    	</group>
                    </group>
                   	<group string = "SEO" col="4">
                    	<field name = "meta_keywords" col="2"/>
                    	<field name = "meta_description" col="2"/>
                    </group>
                </form>                		
			</field>
		</record>		

        <record id="action_django_panel_settings" model="ir.actions.act_window">
            <field name="name">Django Panel Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">django.panel.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>		
		
		<menuitem id = "menu_django_panel_settings" 
		parent = "django_panel.django_main_menu_settings_view" 
		action = "action_django_panel_settings" />
		
	</data>
</openerp>